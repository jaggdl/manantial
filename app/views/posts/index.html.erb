<h1 class="text-3xl font-bold mb-12">Jose Alfredo's Blog</h1>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

<ul class="grid grid-cols-2 gap-3 w-full">
  <% @posts.each do |post| %>
    <li>
      <%= link_to post, class: 'group' do %>
        <% if post.image.present? %>
          <div class="w-full overflow-hidden rounded">
            <%= image_tag post.image.thumb.url, class: 'w-full transition-transform duration-200 transform group-hover:scale-105' %>
          </div>
        <% end %>
        <span class="block mt-2 text-lg font-semibold group-hover:text-blue-800"><%= post.title %></span>
      <% end %>
      <% if user_signed_in? %>
        <div class="w-full flex justify-end space-x-2">
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
