<% if post.image.present? %>
  <div class="w-full overflow-hidden rounded relative <%= classes %>">
    <%= image_tag post.image.xs.url, class: 'w-full h-full object-cover transition-transform duration-200 transform group-hover:scale-105' %>
    <span class="absolute bottom-2 right-2 px-2 py-1 rounded text-sm bg-gray-600/50 text-gray-200 backdrop-blur-lg"><%= time_since_created(post.created_at) %></span>
  </div>
<% end %>
